      "show": {
        "actions.operation": [
          "createRecord",
          "updateRecord"
        ]
      },
      "description": "Object of field values for the record (maps to 'fields')."
    },
    {
      "label": "Records (JSON)",
      "name": "records",
      "type": "json",
      "show": {
        "actions.operation": [
          "createMultipleRecords",
          "updateMultipleRecords"
        ]
      },
      "description": "Array of record payloads (e.g., [{\"fields\": { ... }}])."
