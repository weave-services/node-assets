    {
      "label": "Credential Method",
      "name": "credentialMethod",
      "type": "oauth",
      "options": [
        { "label": "Pinterest OAuth", "name": "pinterestOAuth" }
      ],
      "default": "pinterestOAuth"
    }
  ],
  "inputParameters": [
    {
      "label": "Account ID",
      "name": "accountId",
      "type": "string",
      "description": "The Pinterest user account ID",
      "show": {
        "actions.api": ["getUserAccount"]
      }
    },
    {
      "label": "Board ID",
      "name": "boardId",
      "type": "string",
      "description": "The ID of the board",
      "show": {
        "actions.api": [
          "getBoard",
          "updateBoard",
          "deleteBoard",
          "listPins",
          "createPin"
        ]
      }
    },
    {
      "label": "Board Section ID",
      "name": "boardSectionId",
      "type": "string",
      "description": "The ID of the board section",
