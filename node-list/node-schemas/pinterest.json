      "name": "pageSize",
      "type": "number",
      "optional": true,
      "default": 25,
      "description": "Maximum number of items to return",
      "show": {
        "actions.api": [
          "listBoards",
          "listPins",
          "listBoardSections",
          "listAdAccounts",
          "listCampaigns",
          "listAdGroups",
          "listAds",
          "getAdsStats",
          "listCatalogs",
          "listProducts"
        ]
      }
    },
    {
      "label": "Bookmark",
      "name": "bookmark",
      "type": "string",
      "optional": true,
      "description": "Pagination bookmark token",
      "show": {
        "actions.api": [
          "listBoards",
          "listPins",
          "listBoardSections",
          "listAdAccounts",
          "listCampaigns",
          "listAdGroups",
          "listAds",
          "getAdsStats",
          "listCatalogs",
          "listProducts"
        ]
      }
    },
    {
      "label": "Title",
      "name": "title",
      "type": "string",
      "description": "Title for a new board or catalog",
      "show": {
        "actions.api": ["createBoard", "createCatalog"]
      }
    },
    {
      "label": "Description",
      "name": "description",
      "type": "string",
      "optional": true,
      "description": "Description for a board, pin, or product",
      "show": {
        "actions.api": [
          "createBoard",
          "updateBoard",
          "createPin",
          "updatePin",
          "createCatalog",
          "updateCatalog",
          "createProduct",
          "updateProduct"
        ]
