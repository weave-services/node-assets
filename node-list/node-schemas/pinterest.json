      "name": "level",
      "type": "options",
      "options": [
        { "label": "ACCOUNT",  "name": "ACCOUNT" },
        { "label": "CAMPAIGN", "name": "CAMPAIGN" },
        { "label": "AD_GROUP", "name": "AD_GROUP" },
        { "label": "AD",       "name": "AD" }
