        "actions.api": [
          "getBoardSection",
          "updateBoardSection",
          "deleteBoardSection",
          "listProducts"
        ]
      }
    },
    {
      "label": "Pin ID",
      "name": "pinId",
      "type": "string",
      "description": "The ID of the pin",
