    {
      "label": "Campaign ID",
      "name": "campaignId",
      "type": "string",
      "description": "The campaign ID",
      "show": {
        "actions.api": [
          "getCampaign",
          "updateCampaign",
          "deleteCampaign",
          "listAdGroups",
          "getAdsStats"
        ]
      }
    },
    {
      "label": "Ad Group ID",
      "name": "adGroupId",
      "type": "string",
      "description": "The ad group ID",
      "show": {
        "actions.api": [
          "getAdGroup",
          "updateAdGroup",
          "deleteAdGroup",
          "listAds",
          "getAdsStats"
        ]
      }
    },
    {
      "label": "Ad ID",
      "name": "adId",
      "type": "string",
      "description": "The ad ID",
