{
  "label": "Model Context Protocol",
  "name": "modelContextProtocolTest",
  "icons": {
    "default": "https://raw.githubusercontent.com/nerding-io/n8n-nodes-mcp/575ac49928e8fa192191f0a8f631e407c071fdfb/nodes/McpClient/mcpClient.svg",
    "light": "https://raw.githubusercontent.com/nerding-io/n8n-nodes-mcp/575ac49928e8fa192191f0a8f631e407c071fdfb/nodes/McpClient/mcpClient.svg",
    "dark": "https://raw.githubusercontent.com/nerding-io/n8n-nodes-mcp/575ac49928e8fa192191f0a8f631e407c071fdfb/nodes/McpClient/mcpClient.svg"
  },
  "type": "action",
  "category": "Agent Orchestration",
  "version": 1,
  "description": "Executes tools defined in the Model Context Protocol serverless environment.",
  "incoming": 1,
  "outgoing": 1,
  "actions": [
    {
      "label": "Tool to Execute",
      "name": "toolName",
      "type": "options",
      "options": [
        { "label": "Calculator", "name": "calculator" }
      ]
    },
    {
      "label": "MCP Client & Server, Client, or Server",
      "name": "mcpType",
      "type": "options",
      "options": [
        { "label": "MCP Server & Client", "name": "mcpServerAndClient" },
        { "label": "MCP Client", "name": "mcpClient" },
        { "label": "MCP Server", "name": "mcpServer" }
      ]
    }
  ],
  "credentials": [
    {
      "label": "Credential Method",
      "name": "credentialMethod",
      "type": "string",
      "options": [{ "label": "MCP API Key", "name": "apiKey" }],
      "default": "apiKey",
      "show": { "actions.mcpType": ["mcpServerAndClient", "mcpClient"] }
    }
  ],
  "inputParameters": [
    {
      "label": "Message",
      "name": "message",
      "type": "string",
      "default": "Message",
      "description": "MCP Client Message",
      "show": { "actions.mcpType": ["mcpClient", "mcpServerAndClient"] }
    },
    {
      "label": "MCP Server URL",
      "name": "mcpServerURL",
      "type": "string",
      "default": "URL",
      "description": "MCP Server URL",
      "show": { "actions.mcpType": ["mcpClient"] }
    },
    {
      "label": "Tools",
      "name": "mcpServerTools",
      "type": "array",
      "description": "The tools that the MCP server offers",
      "array": [
          {
              "label": "Tool Name",
              "name": "toolName",
              "type": "string",
              "description": "The tool name"
          },
          {
              "label": "Tool URL",
              "name": "mcpToolURL",
              "type": "string",
              "description": "The code for the tool"
          },
          {
            "label": "Tool Code",
            "name": "mcpToolCode",
            "type": "string",
            "description": "The code for the tool"
          }
      ],
      "optional": true,
      "show": { "actions.mcpType": ["mcpServer", "mcpServerAndClient"] }
  }
  ],
  "filePath": null
}